<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/list_item_margin"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nameLabel"
        style="@style/ListHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_map_24dp"
        android:text="@string/name"
        app:layout_constraintEnd_toStartOf="@+id/codeLabel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.6" />

    <TextView
        android:id="@+id/codeLabel"
        style="@style/ListHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_code_24dp"
        android:text="@string/code"
        app:layout_constraintEnd_toStartOf="@+id/domainLabel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/nameLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/domainLabel"
        style="@style/ListHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_cloud_24dp"
        android:text="@string/domain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/codeLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        android:padding="2dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/nameLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameLabel"
        tools:text="Poland Poland Poland Poland Poland Poland Poland Poland Poland Poland " />

    <TextView
        android:id="@+id/phoneNumberCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/codeLabel"
        app:layout_constraintStart_toEndOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/codeLabel"
        tools:text="+ 48 + 48 + 48 + 48 + 48 + 48 + 48" />

    <TextView
        android:id="@+id/domainName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/domainLabel"
        app:layout_constraintStart_toEndOf="@+id/codeLabel"
        app:layout_constraintTop_toBottomOf="@+id/domainLabel"
        tools:text=".pl .pl .pl .pl .pl .pl .pl .pl .pl .pl .pl .pl .pl .pl .pl .pl .pl" />
</androidx.constraintlayout.widget.ConstraintLayout>